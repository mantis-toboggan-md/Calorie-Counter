<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:elevation="2dp">


    <TextView
        android:id="@+id/text_food_name"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_food_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="amount"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_food_name" />

    <TextView
        android:id="@+id/text_food_kCal"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="2dp"
        android:text="kCal"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_name"
        app:layout_constraintEnd_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/text_food_p"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="protein"
        app:layout_constraintEnd_toStartOf="@+id/text_food_fat"
        app:layout_constraintTop_toBottomOf="@+id/text_food_name" />

    <TextView
        android:id="@+id/text_food_fat"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="fat "
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_p"
        app:layout_constraintEnd_toStartOf="@+id/text_food_carbs" />

    <TextView
        android:id="@+id/text_food_carbs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="carbs"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_fat"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_food_ghg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="ghg"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/text_food_p" />

    <TextView
        android:id="@+id/text_food_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="land"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_ghg"
        app:layout_constraintEnd_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/text_food_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="water"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_ghg"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/fab_food_remove"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toBottomOf="@+id/divider3"
        app:layout_constraintTop_toBottomOf="@+id/text_food_amt"
        tools:layout_editor_absoluteX="8dp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_food_land" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Gas:"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_ghg"
        app:layout_constraintEnd_toStartOf="@+id/text_food_ghg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Land:"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_land"
        app:layout_constraintEnd_toStartOf="@+id/text_food_land" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Water:"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_water"
        app:layout_constraintEnd_toStartOf="@+id/text_food_water" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="kCal"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_food_kCal"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
