<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="name "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cat_ghg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="GHG Produced:"
        app:layout_constraintEnd_toStartOf="@+id/text_cat_ghg_value"
        app:layout_constraintTop_toBottomOf="@+id/text_cat_name" />

    <TextView
        android:id="@+id/text_cat_ghg_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_cat_ghg_label"
        app:layout_constraintEnd_toStartOf="@+id/text_cat_land_label" />

    <TextView
        android:id="@+id/text_cat_land_label"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Land Use:"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_cat_ghg_value"
        app:layout_constraintEnd_toStartOf="@+id/text_cat_land_value" />

    <TextView
        android:id="@+id/text_cat_land_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_cat_land_label"
        app:layout_constraintEnd_toStartOf="@+id/text_cat_water_label" />

    <TextView
        android:id="@+id/text_cat_water_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Water Use:"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_cat_land_value"
        app:layout_constraintEnd_toStartOf="@+id/text_cat_water_value" />

    <TextView
        android:id="@+id/text_cat_water_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_cat_water_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider5"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cat_land_label" />
</android.support.constraint.ConstraintLayout>